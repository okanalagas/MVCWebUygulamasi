@model List<Category>
@{
    ViewBag.Title = "ListCategories";
}

<h2>Categories</h2>
<table class="table table-hover">
    <tr>
        <th>Category Id</th>
        <th>Category Name</th>
        <th>Category Description</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (Category item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.Description</td>
            <td>@Html.ActionLink("Edit", "EditCategory", new { id = item.CategoryID }, new { @class = "btn btn-warning" })</td>
            <td>@Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryID }, new { @class = "btn btn-danger" })</td>
        </tr>
    }
</table>
<h3>To create a new category @Html.ActionLink("Click here", "AddCategory")</h3> 

